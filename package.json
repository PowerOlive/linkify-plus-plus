{
  "name": "linkify-plus-plus",
  "version": "7.3.1",
  "devDependencies": {
    "cheerio": "^0.22.0",
    "npm-build-tools": "^2.2.5",
    "replaceinfiles": "^1.1.4",
    "request": "^2.79.0",
    "sync-version": "^0.2.0",
    "watch-run": "^1.2.4"
  },
  "scripts": {
    "build-tlds": "node build-tlds.js > tlds.json",
    "build": "replaceinfiles -s src/*.user.js -d dist/{base} -r tlds.json",
    "test": "eslint --ignore-pattern dist **/*.js",
    "preversion": "npm test",
    "version": "sync-version src/linkify-plus-plus.user.js && npm run build && git add .",
    "postversion": "git push --follow-tags",
    "watch": "watch-run -p src/*.js npm run build"
  }
}
